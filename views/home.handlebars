{{#if dates}}
    <div class="container mx-auto p-2 sm:p-4">
        {{#if (isNotEmpty last_update)}}
        <header class="bg-yellow-100 backdrop-blur-md rounded-lg p-4 mb-6 shadow-lg text-gray-900">
            <div class="flex flex-col sm:flex-row justify-between items-center text-center sm:text-left">
                <div class="mb-3 sm:mb-0">
                    <h1 class="text-xl md:text-2xl font-bold">{{city}}, {{countryCode}}</h1>
                    <p class="text-xs md:text-sm text-gray-700">
                        Lat: {{formatFloat lat}}, Lon: {{formatFloat lon}} | Last Update: {{getDate last_update}}/{{getMonth last_update}} {{getHours last_update}}:{{getMinutes last_update}}
                    </p>
                </div>
                <a href="/" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded-md shadow-md transition duration-300">
                    Search Again
                </a>
            </div>
        </header>
        {{/if}}

        <div class="lg:flex lg:space-x-6">
            <div class="space-y-6 lg:w-2/3">
                <div class="lg:hidden">
                    {{#with (getFirstHour dates)}}
                    <div class="bg-sky-100 backdrop-blur-md rounded-lg shadow-lg overflow-hidden">
                        <h2 class="text-xl lg:text-2xl font-bold text-gray-900 bg-sky-200/50 px-4 py-3 sm:px-6">Current Weather</h2>
                        <div class="p-4 flex items-center">
                            <div class="w-1/3 flex justify-center">
                                {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                    <img class="w-24 h-24" src="/icons/{{this.data.next_1_hours.summary.symbol_code}}.png" title="{{this.data.next_1_hours.summary.symbol_code}}" />
                                {{else}}
                                    <img class="w-24 h-24" src="/icons/{{this.data.next_6_hours.summary.symbol_code}}.png" title="{{this.data.next_6_hours.summary.symbol_code}}" />
                                {{/if}}
                            </div>
                            <div class="w-2/3 pl-4">
                                <div class="text-5xl font-bold text-gray-900">{{this.data.instant.details.air_temperature}}&deg;C</div>
                                <div class="mt-2 space-y-1 text-gray-700">
                                    <div class="flex items-center">
                                        <span class="font-semibold w-16">Rain:</span>
                                        <span>
                                            {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                                {{this.data.next_1_hours.details.precipitation_amount}}
                                            {{else}}
                                                0
                                            {{/if}}
                                            <span class="text-gray-500 text-sm">mm</span>
                                        </span>
                                    </div>
                                    <div class="flex items-center">
                                        <span class="font-semibold w-16">Wind:</span>
                                        <span>{{toKmh this.data.instant.details.wind_speed}} <span class="text-gray-500 text-sm">km/h</span></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/with}}
                </div>
            {{#each dates}}
                {{#if (isLessThan @index 2)}}
                {{#if (hasHoursToShow this @index)}}
                <div class="bg-black/10 backdrop-blur-md rounded-lg shadow-lg overflow-hidden">
                    <h2 class="text-xl lg:text-2xl font-bold text-gray-900 bg-black/5 px-4 py-3 sm:px-6">{{@key}}</h2>
                    <div class="p-2 lg:p-4">
                        <!-- Header Row -->
                        <div class="hidden lg:flex flex-row text-gray-700 font-bold uppercase text-xs px-2 pb-2 border-b border-gray-200">
                            <div class="w-1/5 text-left">Time</div>
                            <div class="w-1/5 text-center">Forecast</div>
                            <div class="w-1/5 text-center">Temp.</div>
                            <div class="w-1/5 text-center">Rain</div>
                            <div class="w-1/5 text-center">Wind</div>
                        </div>
                        <!-- Data Rows -->
                        <div class="divide-y divide-gray-200">
                        {{#each this}}
                            {{#if (isNotFirstHourOfFirstDay @../index @index)}}
                            <div class="flex flex-row items-center text-gray-800 py-3 px-2 hover:bg-black/10 rounded transition duration-200 text-sm lg:text-base">
                                <div class="w-1/5 text-left font-bold">{{this.time}}:00</div>
                                <div class="w-1/5 flex justify-center">
                                    {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                        <img class="w-12 lg:w-16" src="/icons/{{this.data.next_1_hours.summary.symbol_code}}.png" title="{{this.data.next_1_hours.summary.symbol_code}}" />
                                    {{else}}
                                        <img class="w-12 lg:w-16" src="/icons/{{this.data.next_6_hours.summary.symbol_code}}.png" title="{{this.data.next_6_hours.summary.symbol_code}}" />
                                    {{/if}}
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-gray-600">Temp:</div>
                                    <div>{{this.data.instant.details.air_temperature}}&deg;C</div>
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-gray-600">Rain:</div>
                                    <div>
                                        {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                            {{this.data.next_1_hours.details.precipitation_amount}}
                                        {{else}}
                                            0
                                        {{/if}}
                                        <span class="text-gray-500 text-sm">mm</span>
                                    </div>
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-gray-600">Wind:</div>
                                    <div>
                                        {{toKmh this.data.instant.details.wind_speed}} <span class="text-gray-500 text-sm">km/h</span>
                                    </div>
                                </div>
                            </div>
                            {{/if}}
                        {{/each}}
                        </div>
                    </div>
                </div>
                {{/if}}
                {{/if}}
            {{/each}}
            </div>

            <div class="mt-6 lg:mt-0 space-y-4 lg:w-1/3">
                <div class="hidden lg:block">
                {{#with (getFirstHour dates)}}
                <div class="bg-sky-100 backdrop-blur-md rounded-lg shadow-lg overflow-hidden">
                    <h2 class="text-xl lg:text-2xl font-bold text-gray-900 bg-sky-200/50 px-4 py-3 sm:px-6">Current Weather</h2>
                    <div class="p-4 flex items-center">
                        <div class="w-1/3 flex justify-center">
                            {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                <img class="w-24 h-24" src="/icons/{{this.data.next_1_hours.summary.symbol_code}}.png" title="{{this.data.next_1_hours.summary.symbol_code}}" />
                            {{else}}
                                <img class="w-24 h-24" src="/icons/{{this.data.next_6_hours.summary.symbol_code}}.png" title="{{this.data.next_6_hours.summary.symbol_code}}" />
                            {{/if}}
                        </div>
                        <div class="w-2/3 pl-4">
                            <div class="text-5xl font-bold text-gray-900">{{this.data.instant.details.air_temperature}}&deg;C</div>
                            <div class="mt-2 space-y-1 text-gray-700">
                                <div class="flex items-center">
                                    <span class="font-semibold w-16">Rain:</span>
                                    <span>
                                        {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                            {{this.data.next_1_hours.details.precipitation_amount}}
                                        {{else}}
                                            0
                                        {{/if}}
                                        <span class="text-gray-500 text-sm">mm</span>
                                    </span>
                                </div>
                                <div class="flex items-center">
                                    <span class="font-semibold w-16">Wind:</span>
                                    <span>{{toKmh this.data.instant.details.wind_speed}} <span class="text-gray-500 text-sm">km/h</span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/with}}
                </div>
                <div class="hidden lg:block bg-black/10 backdrop-blur-md rounded-lg shadow-lg p-4 text-gray-900">
                    <h3 class="font-bold text-lg mb-2">About This Forecast</h3>
                    <p class="text-sm text-gray-700">
                        This site provides a detailed hourly weather forecast using data from the Norwegian Meteorological Institute. All times are local to the selected location.
                    </p>
                </div>
            {{#each dates}}
                {{#if (isGte @index 2)}}
                {{#if (hasHoursToShow this @index)}}
                <div class="bg-black/10 backdrop-blur-md rounded-lg shadow-lg overflow-hidden">
                    <div class="day-details-trigger flex justify-between items-center bg-black/5 px-4 py-3 cursor-pointer">
                        <h2 class="text-xl lg:text-lg font-bold text-gray-900">{{@key}}</h2>
                        <svg class="block w-5 h-5 text-gray-900 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                    </div>
                    <div class="p-2">
                        <!-- Data Rows -->
                        <div class="divide-y divide-gray-200">
                        {{#each this}}
                            <div class="flex flex-row items-center text-gray-800 py-3 lg:py-2 px-2 lg:px-1 hover:bg-black/10 rounded transition duration-200 text-sm lg:text-xs">
                                <div class="w-1/5 text-left font-bold">{{this.time}}:00</div>
                                <div class="w-1/5 flex justify-center">
                                    {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                        <img class="w-12 lg:w-10" src="/icons/{{this.data.next_1_hours.summary.symbol_code}}.png" title="{{this.data.next_1_hours.summary.symbol_code}}" />
                                    {{else}}
                                        <img class="w-12 lg:w-10" src="/icons/{{this.data.next_6_hours.summary.symbol_code}}.png" title="{{this.data.next_6_hours.summary.symbol_code}}" />
                                    {{/if}}
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-gray-600">Temp:</div>
                                    <div>{{this.data.instant.details.air_temperature}}&deg;C</div>
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-gray-600">Rain:</div>
                                    <div>
                                        {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                            {{this.data.next_1_hours.details.precipitation_amount}}
                                        {{else}}
                                            0
                                        {{/if}}
                                        <span class="text-gray-500 text-sm">mm</span>
                                    </div>
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-gray-600">Wind:</div>
                                    <div>
                                        {{toKmh this.data.instant.details.wind_speed}} <span class="text-gray-500 text-sm">km/h</span>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                        </div>
                    </div>
                </div>
                {{/if}}
                {{/if}}
            {{/each}}
            </div>
        </div>
    </div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const triggers = document.querySelectorAll('.day-details-trigger');

        // Initially hide content
        triggers.forEach(trigger => {
            trigger.nextElementSibling.classList.add('hidden');
        });

        triggers.forEach(trigger => {
            trigger.addEventListener('click', () => {
                const content = trigger.nextElementSibling;
                const icon = trigger.querySelector('svg');
                content.classList.toggle('hidden');
                icon.classList.toggle('rotate-180');
            });
        });
    });
</script>
{{else}}
    <div class="flex items-center justify-center h-screen">
        <div class="bg-white/50 backdrop-blur-md p-8 rounded-lg shadow-2xl max-w-sm w-full text-center text-gray-800">
            <h1 class="text-3xl font-bold mb-6">Weather Forecast</h1>
            
            <div class="mb-4">
                <input id="location" type="text" class="bg-white/50 border border-gray-300 text-gray-900 text-lg w-full px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-cyan-500 placeholder-gray-500" placeholder="Enter a city or address" />
            </div>
            
            <div class="mb-4">
                <button class="text-lg w-full bg-gray-800 text-white hover:bg-gray-900 font-bold py-2 px-4 rounded transition duration-300" onClick="redirectByLocation()">
                    Get Weather
                </button>
            </div>

            <div class="flex items-center my-6">
                <div class="flex-grow border-t border-gray-300"></div>
                <span class="flex-shrink mx-4 text-gray-600">or</span>
                <div class="flex-grow border-t border-gray-300"></div>
            </div>

            <button class="text-lg w-full bg-gray-600 text-white hover:bg-gray-700 font-bold py-2 px-4 rounded transition duration-300 flex items-center justify-center" onclick="getCoordsAndRedirect()">
                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                Use my current location
            </button>
        </div>
    </div>
{{/if}}
