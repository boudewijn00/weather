{{#if dates}}
    <div class="container mx-auto p-2 sm:p-4">
        {{#if (isNotEmpty last_update)}}
        <header class="bg-black/40 backdrop-blur-md rounded-xl p-4 mb-6 shadow-lg text-white">
            <div class="flex flex-col sm:flex-row justify-between items-center text-center sm:text-left">
                <div class="mb-3 sm:mb-0">
                    <h1 class="text-xl md:text-2xl font-bold">{{city}}, {{countryCode}}</h1>
                    <p class="text-xs md:text-sm text-white/80">
                        Lat: {{formatFloat lat}}, Lon: {{formatFloat lon}} | Last Update: {{getDate last_update}}/{{getMonth last_update}} {{getHours last_update}}:{{getMinutes last_update}}
                    </p>
                </div>
                <a href="/" class="bg-white/30 hover:bg-white/50 font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300">
                    Search Again
                </a>
            </div>
        </header>
        {{/if}}

        <div class="lg:flex lg:space-x-6">
            <div class="space-y-6 lg:w-2/3">
            {{#each dates}}
                {{#if (isLessThan @index 2)}}
                <div class="bg-black/30 backdrop-blur-md rounded-xl shadow-lg overflow-hidden">
                    <h2 class="text-xl lg:text-2xl font-bold text-white bg-black/20 px-4 py-3 sm:px-6">{{@key}}</h2>
                    <div class="p-2 lg:p-4">
                        <!-- Header Row -->
                        <div class="hidden lg:flex flex-row text-white/90 font-bold uppercase text-xs px-2 pb-2 border-b border-white/20">
                            <div class="w-1/5 text-left">Time</div>
                            <div class="w-1/5 text-center">Forecast</div>
                            <div class="w-1/5 text-center">Temp.</div>
                            <div class="w-1/5 text-center">Rain</div>
                            <div class="w-1/5 text-center">Wind</div>
                        </div>
                        <!-- Data Rows -->
                        <div class="divide-y divide-white/20">
                        {{#each this}}
                            <div class="flex flex-row items-center text-white py-3 px-2 hover:bg-black/20 rounded-md transition duration-200 text-sm lg:text-base">
                                <div class="w-1/5 text-left font-bold">{{this.time}}:00</div>
                                <div class="w-1/5 flex justify-center">
                                    {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                        <img class="w-12 lg:w-16" src="/icons/{{this.data.next_1_hours.summary.symbol_code}}.png" title="{{this.data.next_1_hours.summary.symbol_code}}" />
                                    {{else}}
                                        <img class="w-12 lg:w-16" src="/icons/{{this.data.next_6_hours.summary.symbol_code}}.png" title="{{this.data.next_6_hours.summary.symbol_code}}" />
                                    {{/if}}
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-white/80">Temp:</div>
                                    <div>{{this.data.instant.details.air_temperature}}&deg;C</div>
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-white/80">Rain:</div>
                                    <div>
                                        {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                            {{this.data.next_1_hours.details.precipitation_amount}}
                                        {{else}}
                                            0
                                        {{/if}}
                                        <span class="text-white/60 text-sm">mm</span>
                                    </div>
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-white/80">Wind:</div>
                                    <div>
                                        {{toKmh this.data.instant.details.wind_speed}} <span class="text-white/60 text-sm">km/h</span>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                        </div>
                    </div>
                </div>
                {{/if}}
            {{/each}}
            </div>

            <div class="space-y-4 lg:w-1/3">
                <div class="hidden lg:block bg-black/30 backdrop-blur-md rounded-xl shadow-lg p-4 text-white">
                    <h3 class="font-bold text-lg mb-2">About This Forecast</h3>
                    <p class="text-sm text-white/80">
                        This site provides a detailed hourly weather forecast using data from the Norwegian Meteorological Institute. All times are local to the selected location.
                    </p>
                </div>
            {{#each dates}}
                {{#if (isGte @index 2)}}
                <div class="bg-black/30 backdrop-blur-md rounded-xl shadow-lg overflow-hidden">
                    <h2 class="text-xl lg:text-lg font-bold text-white bg-black/20 px-4 py-3">{{@key}}</h2>
                    <div class="p-2">
                        <!-- Data Rows -->
                        <div class="divide-y divide-white/20">
                        {{#each this}}
                            <div class="flex flex-row items-center text-white py-3 lg:py-2 px-2 lg:px-1 hover:bg-black/20 rounded-md transition duration-200 text-sm lg:text-xs">
                                <div class="w-1/5 text-left font-bold">{{this.time}}:00</div>
                                <div class="w-1/5 flex justify-center">
                                    {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                        <img class="w-12 lg:w-10" src="/icons/{{this.data.next_1_hours.summary.symbol_code}}.png" title="{{this.data.next_1_hours.summary.symbol_code}}" />
                                    {{else}}
                                        <img class="w-12 lg:w-10" src="/icons/{{this.data.next_6_hours.summary.symbol_code}}.png" title="{{this.data.next_6_hours.summary.symbol_code}}" />
                                    {{/if}}
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-white/80">Temp:</div>
                                    <div>{{this.data.instant.details.air_temperature}}&deg;C</div>
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-white/80">Rain:</div>
                                    <div>
                                        {{#if (isNotEmpty this.data.next_1_hours.details.precipitation_amount)}}
                                            {{this.data.next_1_hours.details.precipitation_amount}}
                                        {{else}}
                                            0
                                        {{/if}}
                                        <span class="text-white/60 text-sm">mm</span>
                                    </div>
                                </div>
                                <div class="w-1/5 text-center">
                                    <div class="lg:hidden font-bold text-white/80">Wind:</div>
                                    <div>
                                        {{toKmh this.data.instant.details.wind_speed}} <span class="text-white/60 text-sm">km/h</span>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                        </div>
                    </div>
                </div>
                {{/if}}
            {{/each}}
            </div>
        </div>
    </div>
{{else}}
    <div class="flex items-center justify-center h-screen">
        <div class="bg-black/30 backdrop-blur-md p-8 rounded-xl shadow-2xl max-w-sm w-full text-center text-white">
            <h1 class="text-3xl font-bold mb-6">Weather Forecast</h1>
            
            <div class="mb-4">
                <input id="location" type="text" class="bg-white/10 border border-white/30 text-lg w-full px-4 py-2 rounded-md focus:outline-none focus:ring-2 focus:ring-cyan-300 placeholder-white/70" placeholder="Enter a city or address" />
            </div>
            
            <div class="mb-4">
                <button class="text-lg w-full bg-white/20 hover:bg-white/30 font-bold py-2 px-4 rounded-md transition duration-300" onClick="redirectByLocation()">
                    Get Weather
                </button>
            </div>

            <div class="flex items-center my-6">
                <div class="flex-grow border-t border-white/30"></div>
                <span class="flex-shrink mx-4 text-white/80">or</span>
                <div class="flex-grow border-t border-white/30"></div>
            </div>

            <button class="text-lg w-full bg-white/20 hover:bg-white/30 font-bold py-2 px-4 rounded-md transition duration-300 flex items-center justify-center" onclick="getCoordsAndRedirect()">
                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                Use my current location
            </button>
        </div>
    </div>
{{/if}}
